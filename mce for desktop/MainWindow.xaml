<Window x:Class="mce_for_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mce_for_desktop"
        mc:Ignorable="d"
        Title="MCE for desktop" Height="600" Width="971"
        Icon="icon.ico">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="0,0,720,0">
            <StackPanel x:Name="panel">
            </StackPanel>
        </ScrollViewer>
        <Viewbox HorizontalAlignment="Left" Height="144" Margin="492,15,0,0" VerticalAlignment="Top" Width="302">
            <Label x:Name="time" Content="00:00:00" Width="57"/>
        </Viewbox>
        <Viewbox HorizontalAlignment="Left" Height="144" Margin="320,200,0,0" VerticalAlignment="Top" Width="560">
            <Label x:Name="data" Content="アイテム名       $0" />
        </Viewbox>
        <Image x:Name="item" HorizontalAlignment="Left" Height="32" Margin="283,261,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="-0.281,0.75"/>
        <Button Content="UPDATE" HorizontalAlignment="Left" Margin="404,407,0,0" VerticalAlignment="Top" Width="390" Height="74" Click="update" FontSize="30"/>
    </Grid>
</Window>
